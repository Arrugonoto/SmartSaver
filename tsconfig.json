{
   "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "baseUrl": "./",
      "paths": {
         "@*": ["src/*"],
         "@components/*": ["src/components/*"],
         "@actions/*": ["src/lib/actions/*"],
         "@lib/*": ["src/lib/*"],
         "@data/*": ["src/lib/constants/data/*"],
         "@constants/*": ["src/lib/constants/*"]
      }
   },
   "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts",
      "scripts/seed.js"
   ],
   "exclude": ["node_modules"]
}
